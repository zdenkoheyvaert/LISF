!BOP
!
! !ROUTINE: readcrd_plumber2
! \label{readcrd_plumber2}
!
! !REVISION HISTORY:
! 15 Sep 2021: Mark Beauharnois, based on Bondville and GSWP2 readers
!
! !INTERFACE:
      subroutine readcrd_plumber2()
! !USES:
      use ESMF
      use LIS_logMod, only : LIS_logunit
      use LIS_coreMod, only : LIS_rc, LIS_config
      use plumber2_forcingMod, only : plumber2_struc

! !DESCRIPTION:
!  This routine reads the options specific to a PLUMBER2 test
!  case station data forcing from the LIS configuration file.
!
!EOP
      implicit none
      integer :: n, rc

      call ESMF_ConfigFindLabel(LIS_config,                            &
                                "PLUMBER2 forcing file:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                      &
                            plumber2_struc(n)%plumber2file,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Station ID:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                      &
                            plumber2_struc(n)%stnid,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Latitude:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%stnlat,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Longitude:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%stnlon,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                            &
                                "PLUMBER2 Time Delta:",rc=rc)

      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,plumber2_struc(n)%ts,&
                              rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 UTC Offset seconds:",rc=rc)

      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%utcoffset_sec,rc=rc)
      enddo

      !! Start date/time information
      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Start Year:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%sYear,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Start Month:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%sMon,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Start Day:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%sDay,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Start Hour:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%sHour,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Start Minute:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%sMin,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Start Second:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%sSec,rc=rc)
      enddo

      !! End date/time information
      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 End Year:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%eYear,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 End Month:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%eMon,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 End Day:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%eDay,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 End Hour:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%eHour,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 End Minute:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%eMin,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 End Second:",rc=rc)
      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%eSec,rc=rc)
      enddo

      call ESMF_ConfigFindLabel(LIS_config,                           &
                                "PLUMBER2 Vegetation Type:",rc=rc)

      do n = 1,LIS_rc%nnest
         call ESMF_ConfigGetAttribute(LIS_config,                     &
                              plumber2_struc(n)%veg_type,rc=rc)
      enddo

      do n = 1,LIS_rc%nnest
         write(LIS_logunit,*) "[INFO] Using PLUMBER2 forcing"
         write(LIS_logunit,*) "[INFO] PLUMBER2 forcing file: ",       &
                               trim(plumber2_struc(n)%plumber2file)

         plumber2_struc(n)%plumber2time2 = 3000.0
         plumber2_struc(n)%plumber2time1 = 0.0

         plumber2_struc(n)%startRead = .false.
      enddo

end subroutine readcrd_plumber2

